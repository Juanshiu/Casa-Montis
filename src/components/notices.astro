---
export interface Props {
    title: string;
    date: string;
    description: string;
    link: string;
    image: string;
}

const { title, date, description, link, image }: Props = Astro.props;
---

<a href={link} class=" flex flex-col sm:flex-row gap-8 items-center group">
    <div class=" w-full h-auto rounded-2xl overflow-hidden">
        <img src={image}                                 
            transition:name="imageblog"    
            class=" size-full group-hover:scale-110 duration-300 transition-transform  object-cover " 
            alt=""
        >
    </div>
    <div>
        <div>
            <img src="" alt="">
            <span class=" font-texto text-text-light text-sm font-light">{date}</span>
        </div>
        <h3 class="text-2xl text-text-light mb-2">{title}</h3>
        <p class=" font-texto font-light text-text-light/60 mb-4">{description}</p>
    </div>
</a>