---
import Horario from "@/components/Horario.astro";
import TitleArrow from "@/components/TitleArrow.astro";
import Layout from "@/layouts/Layout.astro";
import Facebook from '@/assets/svg/facebook2.svg';
import Whatsapp from '@/assets/svg/whatsapp2.svg';
import Contacts from "@/components/Contacts.astro";
import { Image } from "astro:assets";
import Sections from "@/components/Sections.astro";

const horarios = [
    { dia: "Lunes", hora: "6:30am - 3:00pm" },
    { dia: "Martes", hora: "6:30am - 3:00pm" },
    { dia: "Miércoles", hora: "6:30am - 3:00pm" },
    { dia: "Jueves", hora: "6:30am - 3:00pm" },
    { dia: "Viernes", hora: "6:30am - 3:00pm" },
    { dia: "Sábado", hora: "6:30am - 3:00pm" },
    { dia: "Domingo", hora: "6:30am - 4:00pm" }
];

const srcImage = (image: string) => {
    return `/img/contact/${image}`;
};
---

<Layout title="Casa Montis - Contactos" description="Ponte en contacto con Casa Montis. Encuentra nuestra dirección, horarios de apertura, teléfono y redes sociales para disfrutar de una experiencia gastronómica única. ¡Te esperamos!">
    <main class="relative flex flex-col xl:flex-row gap-4 p-4 xl:p-6 w-full h-auto xl:h-screen">
    
		<Sections 
            title="CONTACTOS" 
            image="/img/home/contactos.webp"
        />

		<section class=" grid xl:grid-rows-2 lg:grid-cols-2 w-full xl:w-1/2 h-full rounded-2xl gap-4">

			<article class=" flex flex-col w-auto h-auto gap-8 lg:justify-between p-8 border border-text-light/20 rounded-2xl ">
                <TitleArrow class=" text-2xl text-text-light"> HORA DE <br> APERTURA </TitleArrow>

                <div class="flex flex-col gap-2 font-texto font-thin text-text-light">
                    {horarios.map(({ dia, hora }) => (
                        <Horario dia={dia} hora={hora} />
                    ))}
                </div>
                
            </article>

            <article class=" grid grid-cols-2 grid-rows-2 gap-4 rounded-2xl">
                
                <Image src={srcImage('foto1.webp')} alt={'Foto'} width={200} height={150} class="w-full h-full aspect-square object-cover rounded-2xl"></Image>
                <Image src={srcImage('foto2.webp')} alt={'Foto'} width={200} height={150} class="w-full h-full aspect-square object-cover rounded-2xl"></Image>
                <Image src={srcImage('foto3.webp')} alt={'Foto'} width={200} height={150} class="w-full h-full aspect-square object-cover rounded-2xl"></Image>
                <Image src={srcImage('foto4.webp')} alt={'Foto'} width={200} height={150} class="w-full h-full aspect-square object-cover rounded-2xl"></Image>
            </article>

            <article class=" relative border border-text-light/20 rounded-2xl">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13402.956560482105!2d-75.42773168875769!3d2.8960127242771128!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3b0d29f8d8954f%3A0x7519ace325dd929a!2sCasa%20Monti&#39;s!5e0!3m2!1ses-419!2sco!4v1748492727582!5m2!1ses-419!2sco" width="100%" height="100%" style="border:0;" class=" rounded-2xl" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </article>

            <article class=" flex flex-col w-auto h-auto gap-8 lg:justify-between p-8 border border-text-light/20 rounded-2xl">
                <TitleArrow class=" text-2xl"> CONTACTANOS </TitleArrow>

                <address class="flex flex-col gap-4 font-texto font-thin text-text-light not-italic">

                    <Contacts title="DIRECCIÓN">
                        <p class="text-text-light">Cra. 9 # 11-07 Palermo - Huila</p>
                    </Contacts>

                    <Contacts title="TELÉFONO">
                        <a href="tel:+573132171025" class="text-text-light hover:text-text-light/80 transition-colors">
                            +57 313 217 1025
                        </a>
                    </Contacts>

                    <Contacts title="EMAIL">
                        <a href="mailto:casamontiss@gmail.com" class="text-text-light hover:text-text-light/80 transition-colors">
                            casamontiss@gmail.com
                        </a>
                    </Contacts>

                    <Contacts title="REDES SOCIALES">
                        <div class="flex justify-start items-center gap-4">
                            <a 
                                href="https://www.facebook.com/MontisCasa" 
                                target="_blank" 
                                rel="noopener noreferrer"
                                class="text-text-light hover:text-text-light/80 transition-colors p-2 hover:bg-text-light/10 rounded-lg"
                                aria-label="Síguenos en Facebook"
                            >
                                <Facebook height={20} width={20} />
                            </a>
                            <a 
                                href="https://wa.me/3132171025" 
                                target="_blank" 
                                rel="noopener noreferrer"
                                class="text-text-light hover:text-text-light/80 transition-colors p-2 hover:bg-text-light/10 rounded-lg"
                                aria-label="Contáctanos por WhatsApp"
                            >
                                <Whatsapp height={20} width={20} />
                            </a>
                        </div>
                    </Contacts>

                </address>
            </article>
		</section>
	</main>
</Layout>